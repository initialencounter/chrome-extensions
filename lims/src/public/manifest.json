{
  "manifest_version": 3,
  "name": "lims",
  "version": "1.0",
  "description": "tools for own use",
  "icons": {
    "48": "assets/icons/lims.png"
  },
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "options_page": "options/index.html",
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/sek/inspect*",
        "https://*/pek/inspect*"
      ],
      "all_frames": true,
      "css": [
        "assets/message.min.css"
      ],
      "js": [
        "js/utils.js",
        "js/hotkey.js",
        "js/pek2sek.js",
        "assets/message.min.mjs"
      ]
    },
    {
      "matches": [
        "https://*/inspect/query/main"
      ],
      "all_frames": true,
      "js": [
        "js/utils.js",
        "js/query.js"
      ]
    }
  ]
}