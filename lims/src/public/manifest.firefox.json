{
    "browser_specific_settings": {
      "gecko": {
        "id": "{3f8b9a12-a64d-48d8-bb5c-8d9f4e9322b2}"
      }
    },
    "manifest_version": 3,
    "name": "lims",
    "version": "1.8.1",
    "description": "tools for own use",
    "icons": {
      "48": "assets/icons/lims.png"
    },
    "permissions": [
      "storage",
      "contextMenus"
    ],
    "action": {
      "default_popup": "popup/index.html"
    },
    "options_page": "options/index.html",
    "background": {
      "scripts": [
        "js/background.js"
      ],
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": [
          "https://*/sek/inspect*",
          "https://*/pek/inspect*"
        ],
        "all_frames": true,
        "css": [
          "assets/message.min.css"
        ],
        "js": [
          "js/validators.js",
          "js/utils.js",
          "js/hotkey.js",
          "assets/message.min.mjs",
          "js/checkList.js",
          "js/verify.js"
        ]
      },
      {
        "matches": [
          "https://*/inspect/query/main"
        ],
        "all_frames": true,
        "js": [
          "js/utils.js",
          "js/query.js"
        ]
      },
      {
        "matches": [
          "https://*/sales/entrust/list"
        ],
        "all_frames": true,
        "css": [
          "assets/message.min.css"
        ],
        "js": [
          "js/entrust.js",
          "assets/message.min.mjs"
        ]
      },
      {
        "matches": [
          "https://*/sales/entrust/main"
        ],
        "css": [
          "assets/message.min.css"
        ],
        "all_frames": true,
        "js": [
          "js/utils.js",
          "js/entrustMain.js",
          "js/entrustEname.js",
          "assets/message.min.mjs"
        ]
      },
      {
        "matches": [
          "https://*/sales/entrust/dict/main?callback=entrust_dict_callback"
        ],
        "all_frames": true,
        "js": [
          "js/utils.js",
          "js/entrustImport.js"
        ]
      },
      {
        "matches": [
          "https://*/flow/inspect/inspect/main"
        ],
        "all_frames": true,
        "css": [
          "assets/message.min.css"
        ],
        "js":[
          "js/rollback.js",
          "assets/message.min.mjs"
        ]
      }
    ]
  }